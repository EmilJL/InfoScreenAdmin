<Page
    x:Class="InfoScreenAdminGUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfoScreenAdminGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="Pivot" HorizontalAlignment="Stretch" Margin="540,0,0,0" VerticalAlignment="Stretch">
            <PivotItem Header="Madplan">
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                    <Button x:Name="BtnCurrentFoodPlan" Content="Nuværende plan" HorizontalAlignment="Left" Margin="48,222,0,0" VerticalAlignment="Top"/>

                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="261" Margin="48,295,0,0" VerticalAlignment="Top" Width="574">
                        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">

                            <TextBox x:Name="TBoxMonday" HorizontalAlignment="Left" Margin="287,0,0,0" Text="Ret her!" VerticalAlignment="Top" Height="45" Width="287"/>
                            <TextBlock x:Name="TBlockMonday" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Mandag" VerticalAlignment="Top" Height="45" Width="287"/>

                            <TextBox x:Name="TBoxTuesday" HorizontalAlignment="Left" Margin="287,54,0,0" Text="Ret her!" VerticalAlignment="Top" Height="45" Width="287"/>
                            <TextBlock x:Name="TBlockTuesday" HorizontalAlignment="Left" Margin="0,54,0,0" Text="Tirsdag" VerticalAlignment="Top" Height="45" Width="287"/>

                            <TextBox x:Name="TBoxWednesday" HorizontalAlignment="Left" Margin="287,108,0,0" Text="Ret her!" VerticalAlignment="Top" Height="45" Width="287"/>
                            <TextBlock x:Name="TBlockWednesday" HorizontalAlignment="Left" Margin="0,108,0,0" Text="Onsdag" VerticalAlignment="Top" Height="45" Width="287"/>

                            <TextBox x:Name="TBoxThursday" HorizontalAlignment="Left" Margin="287,162,0,0" Text="Ret her!" VerticalAlignment="Top" Height="45" Width="287"/>
                            <TextBlock x:Name="TBlockThursday" HorizontalAlignment="Left" Margin="0,162,0,0" Text="Torsdag" VerticalAlignment="Top" Height="45" Width="287"/>

                            <TextBox x:Name="TBoxFriday" HorizontalAlignment="Left" Margin="287,216,0,0" Text="Ret her!" VerticalAlignment="Center" Height="45" Width="287"/>
                            <TextBlock x:Name="TBlockFriday" HorizontalAlignment="Left" Margin="0,216,0,0" Text="Fredag" VerticalAlignment="Center" Height="45" Width="287"/>
                        </Grid>
                    </Border>

                    <ListView x:Name="ListViewDatabaseDishes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="754,295,0,0" Height="261" Width="504" BorderBrush="Black" BorderThickness="1">
                    </ListView>
                    <Button x:Name="BtnAddDishMonday" Content="Tilføj" Margin="663,300,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button x:Name="BtnAddDishTuesdsay" Content="Tilføj" Margin="663,354,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button x:Name="BtnAddDishWednesday" Content="Tilføj" Margin="663,408,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button x:Name="BtnAddDishThursday" Content="Tilføj" Margin="663,462,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button x:Name="BtnAddDishFriday" Content="Tilføj" Margin="663,516,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    <Button x:Name="BtnSavePlan" Content="Gem" Margin="570,595,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox x:Name="CmbBoxWeekNumbers" HorizontalAlignment="Left" Margin="235,238,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TBoxWeekNumber" HorizontalAlignment="Left" Margin="223,194,0,0" Text="Uge Nummer" VerticalAlignment="Top"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Fællesbesked">
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                    <TextBox x:Name="TBoxTitle" HorizontalAlignment="Left" Margin="41,54,0,0" Text="Titel her!" VerticalAlignment="Top" Height="45" Width="287"/>
                    <TextBox x:Name="TBoxMessage" HorizontalAlignment="Left" Margin="41,164,0,0" Text="Besked her!" VerticalAlignment="Top" Height="644" Width="1184"/>
                    <Button x:Name="BtnSaveMessage" Content="Gem" HorizontalAlignment="Left" Margin="1129,845,0,0" VerticalAlignment="Top"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Rediger Layout">
                <Grid/>
            </PivotItem>
        </Pivot>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="264" Margin="10,10,0,0" VerticalAlignment="Top" Width="426">
            <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                <TextBlock x:Name="TBlockCurrentUser" HorizontalAlignment="Left" Margin="41,54,0,0" Text="User: None" VerticalAlignment="Top" Height="45" Width="287"/>
                <Button x:Name="BtnLogIn" Content="Log ind" HorizontalAlignment="Left" Margin="41,143,0,0" VerticalAlignment="Top"/>
                <Button x:Name="BtnLogOut" Content="Log ud" HorizontalAlignment="Left" Margin="263,143,0,0" VerticalAlignment="Top"/>
                <Button x:Name="BtnChangePassword" Content="Ændre kodeord" HorizontalAlignment="Left" Margin="44,211,0,0" VerticalAlignment="Top"/>
                <Button x:Name="BtnEmpty" Content="Drop DB" HorizontalAlignment="Left" Margin="250,211,0,0" VerticalAlignment="Top"/>
            </Grid>

        </Border>
        <ComboBox x:Name="CmbBoxActions" HorizontalAlignment="Left" Margin="60,315,0,0" VerticalAlignment="Top" Height="43" Width="271"/>
    </Grid>
</Page>
